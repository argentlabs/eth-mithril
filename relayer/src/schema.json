{
    "title": "eth_sendTransaction",
    "description": "custom eth_sendTransaction parameters",

    "definitions": {
      "ethaddress": {
        "type": "string",
        "pattern": "^0x[0-9a-fA-F]{40}$"
      },
      "hexadecimal": {
        "type": "string",
        "pattern": "^0x[0-9A-Fa-f]+$"
      }
    },

    "type": "object",
    "properties": {
        "to": { "$ref": "#/definitions/ethaddress" },
        "data": { "$ref": "#/definitions/hexadecimal" },
        "gas": {
            "anyOf": [
                { "$ref": "#/definitions/hexadecimal" },
                { "type": "number", "exclusiveMinimum": 0 }
            ]
        }
    },
    "required": ["to", "data"],
    "additionalProperties": false
}
